.container .imgBox {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  border-bottom: 1rpx #C0C0C0 solid;
  padding-bottom: 70rpx;
}
.container .img {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-top: 80rpx;
  overflow: hidden;
}
.container .img .avatarUrl {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  margin-top: 80rpx;
}
.container .img open-data {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  margin-top: 80rpx;
}
.container .nickName {
  color: #717171;
  padding: 20rpx;
  border-bottom: 1rpx #C0C0C0 solid;
}
.container .nickName .text {
  margin-left: 200rpx;
}
.container .edit .name, .container .edit .phone, .container .edit .gender {
  color: #555555;
  padding: 20rpx;
  border-bottom: 1rpx #C0C0C0 solid;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.container .edit .name .input, .container .edit .phone .input, .container .edit .gender .input {
  margin-left: 200rpx;
}
.container .edit .ID {
  color: #555555;
  padding: 20rpx;
