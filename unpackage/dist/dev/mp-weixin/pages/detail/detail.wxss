input {
  border: 1rpx #e0e0e0 solid;
  border-radius: 5rpx;
  margin: 10rpx;
}
.container {
  background-color: #e1efff;
  height: 1200rpx;
  margin: 0;
  padding-top: 50rpx;
}
.container .box1 {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.container .box2 {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.container .content {
  background-color: #FFFFFF;
  width: 600rpx;
  height: 600rpx;
}
.container .content .name {
  text-align: center;
  padding: 40rpx;
  font-size: 40rpx;
}
.container .content .description {
  text-align: center;
  font-size: 28rpx;
  color: #505050;
  margin-bottom: 25rpx;
}
.container .content .user, .container .content .phone, .container .content .note, .container .content .time {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 25rpx;
  color: #505050;
  font-size: 28rpx;
  margin-left: 30rpx;
}
.container .content .button {
  background-color: #fad3dd;
  height: 80rpx;
  margin-top: 50rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  color: #6d6668;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  font-size: 28rpx;
}
.container .equipment {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  background-color: #FFFFFF;
  margin-top: 200rpx;
  margin-left: 75rpx;
  width: 600rpx;
}
.container .equipment image {
  width: 70rpx;
  height: 70rpx;
}
.container .equipment .computer, .container .equipment .sound, .container .equipment .projector, .container .equipment .water {
  padding: 32rpx;
}

