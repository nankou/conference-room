<view class="container"><view class="title">会议室预约</view><view class="content"><view class="searchBox"><view class="date"><picker class="picker" mode="date" value="{{date}}" start="{{startDate}}" end="{{endDate}}" data-event-opts="{{[['change',[['bindDateChange',['$event']]]],['cancel',[['cancelDateChange',['$event']]]]]}}" bindchange="__e" bindcancel="__e"><view class="uni-input">{{date+''}}<image class="dateImg" src="../../static/index/date.png"></image></view></picker></view><view class="time"><picker class="picker" value="{{index}}" range="{{array}}" data-event-opts="{{[['change',[['bindPickerChange',['$event']]]]]}}" bindchange="__e"><view class="uni-input">{{array[index]+''}}<view class="imgBox"><image class="timeImg" src="../../static/index/time.png"></image></view></view></picker></view><view data-event-opts="{{[['tap',[['getconferenceList',['$event']]]]]}}" class="search" bindtap="__e"><image class="searchImg" src="../../static/index/search.png"></image></view></view><text class="tagging">空闲会议室</text><view class="conference"><block wx:for="{{conferenceList}}" wx:for-item="item" wx:for-index="__i0__" wx:key="id"><view class="conferenceList"><view class="roomID">{{"会议室："+item.number}}</view><view class="text">该会议室空闲，可预约</view><view data-event-opts="{{[['tap',[['toAppointment',['$0','$1'],[[['conferenceList','id',item.id,'id']],[['conferenceList','id',item.id,'number']]]]]]]}}" class="button" bindtap="__e">立刻预约</view></view></block></view><block wx:if="{{isOver}}"><view class="isOver">---我已经到底啦---</view></block></view><block wx:if="{{!hasMe}}"><view class="no">--该时间段没有空闲会议室--</view></block></view>